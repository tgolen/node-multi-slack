extends main.pug

block content
    h1 My Events

    if (USER.events && USER.events.length)
        ul(class='collection event-list')
            each event in USER.events
                li(class='collection-item')
                    strong= moment(event.start).format('dddd, MMMM Do YYYY, h:mm:ss a')
                    if (event.start !== event.end)
                        span &nbsp;to&nbsp;
                        strong= moment(event.end).format('dddd, MMMM Do YYYY, h:mm:ss a')
                    if (event.reason && event.reasonPrefix)
                        span= ' ' + event.reasonPrefix + ' '
                        em= event.reason
    else
        p You have not added any events yet. You can do that in slack with the "add" command.
    #cal-heatmap
